        <ImageButton
            android:id="@+id/x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/icon_x"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_toolbar">

        <RelativeLayout
            android:id="@+id/fragment_container1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Neuerungen"
                android:textColor="?attr/colorTextNormal"
                android:textSize="16dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/text_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view3"
                android:layout_marginTop="10dp"
                android:text="Auf Github ansehen"
                android:textColor="@color/green"
                android:textSize="15dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view2"
                android:layout_marginTop="20dp"
                android:text="MÃ¶chtest du dieses Update jetzt herunterladen?\nKlicke anschlieÃŸend auf die Benachrichtigung."
                android:textColor="?attr/colorTextNormal"
                android:textSize="15.5dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/sizetext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view"
                android:layout_marginTop="15dp"
                android:text="UpdategrÃ¶ÃŸe:"
                android:textColor="?attr/colorTextNormal"
                android:textSize="15.5dp"
                android:textStyle="normal" />

            <CheckBox
                android:id="@+id/clearcheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sizetext"
                android:layout_marginTop="5dp"
                android:text="reine Installation?"
                android:textColor="?attr/colorTextNormal"
                android:textSize="15.5dp"
                android:textStyle="normal" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/stop_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/clearcheck"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:backgroundTint="@color/textlight"
                android:gravity="center"
                android:text="   Abbrechen    "
                android:textColor="@color/black"
                android:textSize="12dp" />

            <Button
                android:id="@+id/download_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/clearcheck"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="17dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:gravity="center"
                android:text="Herunterladen"
                android:textColor="@color/white"
                android:textSize="12dp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>