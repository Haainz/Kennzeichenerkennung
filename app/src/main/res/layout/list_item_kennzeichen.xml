<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/kennzeichen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/D"
                android:layout_width="24dp"
                android:layout_height="33dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/img4" />

            <ImageView
                android:layout_width="53dp"
                android:layout_height="33dp"
                android:layout_marginStart="-5dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/D"
                android:scaleType="fitXY"
                android:src="@drawable/img5" />

            <TextView
                android:id="@+id/textViewKennzeichen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:fontFamily="@font/schriftkraftfahrzeugkennzeichen"
                android:text="WOB"
                android:textColor="@android:color/black"
                android:textSize="30sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textViewDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="-2dp"
            android:layout_toEndOf="@+id/kennzeichen"
            android:text="test"
            android:textColor="?attr/colorTextNormal"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewDetails2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="-2dp"
            android:layout_toEndOf="@id/kennzeichen"
            android:layout_below="@id/textViewDetails"
            android:text="test"
            android:textColor="@color/text_normal"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/savedview"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/icon_heartfull"
            android:layout_marginStart="7dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/textViewDetails2"
            android:layout_below="@id/textViewDetails"
            android:visibility="gone"
            app:tint="#FF0000"/>
    </RelativeLayout>
</LinearLayout>