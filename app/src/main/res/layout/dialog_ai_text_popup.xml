<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/ai_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="KI-Text erscheint hier"
        android:textSize="16sp"
        android:textColor="?attr/colorTextNormal"
        android:visibility="visible"
        android:paddingBottom="8dp" />

    <EditText
        android:id="@+id/ai_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="KI-Text bearbeiten"
        android:textColor="?attr/colorTextNormal"
        android:visibility="gone"
        android:minHeight="100dp"
        android:gravity="top|start"
        android:inputType="textMultiLine" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/button_generate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_rounded_corner"
            android:gravity="center"
            android:textSize="12sp"
            android:text="Generieren"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bearbeiten"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/text_view"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:textSize="12sp"
            android:background="@drawable/edit_text_rounded_corner"
            android:gravity="center"
            android:textColor="@color/white" />

        <ImageButton
            android:id="@+id/button_close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icon_x"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/text_view"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:textSize="12sp"
            android:background="@drawable/edit_text_rounded_corner"
            android:gravity="center"
            app:tint="@color/red"/>
    </LinearLayout>

</LinearLayout>
