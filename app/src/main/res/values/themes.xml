<resources>
    <!-- Base application theme. -->
    <style name="Theme.Kennzeichenerkennung" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/textlight</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- New color attribute -->
        <item name="colorTextNormal">@color/black</item>
        <item name="dialog_background">@color/white</item>
        <item name="greyslider">#DEDEDE</item>
        <item name="backcolor">#FDFDFD</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Kennzeichenerkennung.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Kennzeichenerkennung.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Kennzeichenerkennung.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Kennzeichenerkennung.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.Kennzeichenerkennung.AppWidgetContainer" parent="Theme.Kennzeichenerkennung.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>