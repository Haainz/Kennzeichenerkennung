<resources>
    <style name="Widget.Kennzeichenerkennung.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.Kennzeichenerkennung.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.Kennzeichenerkennung.CompactDialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CustomDialogfullTheme" parent="Theme.Kennzeichenerkennung.CompactDialog">
        <item name="android:windowBackground">@drawable/dialog_full_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="Theme.ImagePickerCrop" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Farbanpassungen optional -->
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>
        <!-- Wichtig: Kein Fullscreen -->
        <item name="android:windowFullscreen">false</item>
    </style>
</resources>