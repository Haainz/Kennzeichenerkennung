<resources>
    <!-- Base application theme. -->
    <style name="Theme.Kennzeichenerkennung" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/yellow</item>
        <item name="colorOnSecondary">@color/textlight</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorTextNormal">@color/white</item>
        <item name="dialog_background">@color/dialog_background</item>
        <item name="greyslider">@color/darkgreyslider</item>
        <item name="backcolor">#303030</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.Kennzeichenerkennung" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
    <style name="Theme.Kennzeichenerkennung.CompactDialog" parent="Theme.MaterialComponents.Dialog">
        <!-- Hintergrundfarbe des Dialogs -->
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <!-- Dialog soll schwebend sein -->
        <item name="android:windowIsFloating">true</item>
        <!-- Abdunklung des Hintergrunds -->
        <item name="android:backgroundDimEnabled">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/yellow</item>
        <item name="colorOnSecondary">@color/textlight</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorTextNormal">@color/white</item>
        <item name="dialog_background">@color/dialog_background</item>
        <item name="greyslider">@color/darkgreyslider</item>
        <item name="backcolor">#303030</item>
    </style>
</resources>